<component name="canvas-courses" type="synapse/template">
    <subComponents>
        <component name="getCourse">
            <file>getCourse.xml</file>
            <description>Get a single course by ID.</description>
        </component>
        <component name="listCourses">
            <file>listCourses.xml</file>
            <description>List courses created in Canvas by the Instructor identified by the Access Token.</description>
        </component>
        <component name="createCourse">
            <file>createCourse.xml</file>
            <description>Create a new course in Canvas.</description>
        </component>
        <component name="listCourseUsers">
            <file>listCourseUsers.xml</file>
            <description>List users associated with a course in Canvas.</description>
        </component>
        <component name="getCourseUser">
            <file>getCourseUser.xml</file>
            <description>Get a single course user by ID.</description>
        </component>
    </subComponents>
</component>
