<component name="canvas-discussionTopics" type="synapse/template">
  <subComponents>
    <component name="createDiscussionTopic">
      <file>createDiscussionTopic.xml</file>
      <description>Create an new discussion topic for the course.</description>
    </component>
    <component name="listDiscussionTopics">
      <file>listDiscussionTopics.xml</file>
      <description>Returns the paginated list of discussion topics for this course.</description>
    </component>
    <component name="getDiscussionTopic">
      <file>getDiscussionTopic.xml</file>
      <description>Returns data on an individual discussion topic.</description>
    </component>
    <component name="createEntry">
      <file>createEntry.xml</file>
      <description>Create a new entry in a discussion topic.</description>
    </component>
    <component name="updateEntry">
      <file>updateEntry.xml</file>
      <description>Update an existing discussion entry.</description>
    </component>
    <component name="listEntries">
      <file>listEntries.xml</file>
      <description>Retrieve a paginated list of discussion entries.</description>
    </component>
    <component name="deleteEntry">
      <file>deleteEntry.xml</file>
      <description>Delete a discussion entry.</description>
    </component>
  </subComponents>
</component>