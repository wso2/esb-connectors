<template name="getCurrentWeatherForOneLocByZipCode" xmlns="http://ws.apache.org/ns/synapse">
    <!-- Required parameters -->
    <parameter name="zipCode" description="City ZIP Code"/>
    <!-- Optional parameters -->
    <parameter name="countryCode" description="Country Code"/>
    <sequence>
        <property name="uri.var.apiParameters" value=""/>
        <property name="uri.var.zipCode" expression="$func:zipCode"/>
        <property name="uri.var.countryCode" expression="$func:countryCode"/>
        <filter xpath="(not(get-property('uri.var.countryCode') = '' or (not(string(get-property('uri.var.countryCode'))))))">
            <then>
                <property name="uri.var.apiParameters"
                          expression="fn:concat(get-property('uri.var.apiParameters'),',',get-property('uri.var.countryCode'))"/>
            </then>
        </filter>
        <call>
            <endpoint>
                <http method="get"
                      uri-template="{uri.var.apiUrl}/data/{uri.var.apiVersion}/weather?zip={uri.var.zipCode}{+uri.var.apiParameters}{+uri.var.appID}"/>
            </endpoint>
        </call>
        <!-- Remove response custom header information -->
        <header name="x-li-format" scope="transport" action="remove"/>
        <header name="X-LI-UUID" scope="transport" action="remove"/>
        <header name="X-Li-Fabric" scope="transport" action="remove"/>
        <header name="x-li-request-id" scope="transport" action="remove"/>
        <header name="X-Li-Pop" scope="transport" action="remove"/>
        <header name="Set-Cookie" scope="transport" action="remove"/>

    </sequence>
</template>