<component name="surveymonkey-surveys" type="synapse/template">
    <subComponents>
        <component name="getSurveyList">
            <file>getSurveyList.xml</file>
            <description>Retrieves a paged list of surveys in a user&apos;s
                account
            </description>
        </component>
        <component name="getSurveyDetails">
            <file>getSurveyDetails.xml</file>
            <description>Retrieve a given survey&apos;s metadata</description>
        </component>
        <component name="getCollectorList">
            <file>getCollectorList.xml</file>
            <description>Retrieves a paged list of collectors for a survey in a
                user&apos;s account
            </description>
        </component>
        <component name="getRespondentList">
            <file>getRespondentList.xml</file>
            <description>Retrieves a paged list of respondents for a given survey
                and optionally collector
            </description>
        </component>
        <component name="getResponses">
            <file>getResponses.xml</file>
            <description>Takes a list of respondent ids and returns the responses
                that correlate to them
            </description>
        </component>
        <component name="getResponseCounts">
            <file>getResponseCounts.xml</file>
            <description>Returns how many respondents have started and/or
                completed the survey for the given collector
            </description>
        </component>
    </subComponents>
</component>