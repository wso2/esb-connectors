<component name="teamwork_people" type="synapse/template">
    <subComponents>
        <component name="getCurrentUser">
            <file>getCurrentUser.xml</file>
            <description>Returns the details for the account you're currently logged in with.</description>
        </component>
        <component name="getPeople">
            <file>getPeople.xml</file>
            <description>All people visible to the user will be returned.</description>
        </component>
        <component name="getPeopleInCompany">
            <file>getPeopleInCompany.xml</file>
            <description>Retrieves the details for all the people from the submitted company.</description>
        </component>
        <component name="getPeopleInProject">
            <file>getPeopleInProject.xml</file>
            <description>Retrieves all of the people in a given project.</description>
        </component>
        <component name="getAPIKeyForPeopleOnAccount">
            <file>getAPIKeyForPeopleOnAccount.xml</file>
            <description>Retrieves the API keys for all people on the Teamwork account.</description>
        </component>
        <component name="getPerson">
            <file>getPerson.xml</file>
            <description>Retrieves the user details for the ID submitted.</description>
        </component>
        <component name="createUser">
            <file>createUser.xml</file>
            <description>Creates a new user account.</description>
        </component>
        <component name="updateUser">
            <file>updateUser.xml</file>
            <description>Updates a user account.</description>
        </component>
        <component name="deleteUser">
            <file>deleteUser.xml</file>
            <description>Deletes the given user account.</description>
        </component>
    </subComponents>
</component>