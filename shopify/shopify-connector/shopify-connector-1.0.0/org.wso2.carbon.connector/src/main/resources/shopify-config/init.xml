<template name="init" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="apiUrl" description="The apiUrl of Shopify"/>
    <parameter name="accessToken"
               description="Encrypted alphanumeric string to authenticate the Shopify credentials"/>
    <parameter name="format"
               description="The response Type which specifies the return type, e.g. json"/>
    <sequence>
        <property name="uri.var.apiUrl" expression="$func:apiUrl"/>
        <property name="uri.var.accessToken" expression="$func:accessToken"/>
        <property name="uri.var.format" expression="$func:format"/>

        <!-- Header information in request -->
        <header name="X-Shopify-Access-Token" expression="get-property('uri.var.accessToken')"
                scope="transport" action="set"/>

        <filter source="boolean(get-property('uri.var.format'))" regex="false">
            <then>
                <property name="uri.var.format" value="json"/>
            </then>
        </filter>
    </sequence>
</template>