<component name="salesforcerest-quickaction" type="synapse/template">
    <subComponents>
        <component name="sObjectAction">
            <file>sObjectAction.xml</file>
            <description>Return a specific object’s actions as well as global actions</description>
        </component>
        <component name="getSpecificAction">
            <file>getSpecificAction.xml</file>
            <description>Return a specific action for a specific object</description>
        </component>
        <component name="quickActions">
            <file>quickActions.xml</file>
            <description>Returns a list of global actions</description>
        </component>
        <component name="getDescribeSpecificAction">
            <file>getDescribeSpecificAction.xml</file>
            <description>Return a specific action’s descriptive detail</description>
        </component>
        <component name="getDefaultValueOfAction">
            <file>getDefaultValueOfAction.xml</file>
            <description>Return a specific action’s default values, including default field values
            </description>
        </component>
    </subComponents>
</component>