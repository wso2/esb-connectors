<component name="blogger-api_comments" type="synapse/template">
    <subComponents>
        <component name="listComments">
            <file>listComments.xml</file>
            <description>List comments of specific post of a specific blog</description>
        </component>
        <component name="getComment">
            <file>getComment.xml</file>
            <description>get a specific comment of specific post of a specific blog</description>
        </component>
        <component name="approveComment">
            <file>approveComment.xml</file>
            <description>approve a specific comment of specific post of a specific blog, as not spam</description>
        </component>
        <component name="deleteComment">
            <file>deleteComment.xml</file>
            <description>delete a specific comment of specific post of a specific blog</description>
        </component>
        <component name="listCommentsByBlog">
            <file>listCommentsByBlog.xml</file>
            <description>list comments of a specific blog</description>
        </component>
        <component name="markCommentAsSpam">
            <file>markCommentAsSpam.xml</file>
            <description>mark comment as spam</description>
        </component>
        <component name="removeCommentContent">
            <file>removeCommentContent.xml</file>
            <description>removes content of a comment as spam</description>
        </component>
    </subComponents>
</component>
