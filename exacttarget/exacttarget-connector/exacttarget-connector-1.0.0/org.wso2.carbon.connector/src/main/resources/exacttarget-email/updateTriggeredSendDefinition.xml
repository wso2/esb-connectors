<template name="updateTriggeredSendDefinition" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="triggeredSendDefinitionObjects"
               description="Collection of TriggeredSendDefinition objects to be updated, Objects will be processed according to the FIFO order"/>
    <parameter name="updateOptions"
               description="An UpdateOptions instance which specifies the additional processing options"/>
    <sequence>
        <property name="uri.var.triggeredSendDefinitionObjects" expression="$func:triggeredSendDefinitionObjects"/>
        <property name="uri.var.updateOptions" expression="$func:updateOptions"/>
        <payloadFactory media-type="xml">
            <format>
                <soap-env:Envelope xmlns:soap-env="http://schemas.xmlsoap.org/soap/envelope/"
                                   xmlns:ns1="http://exacttarget.com/wsdl/partnerAPI"
                                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
                    <soap-env:Header>
                        <fueloauth xmlns="http://exacttarget.com">$1</fueloauth>
                    </soap-env:Header>
                    <soap-env:Body>
                        <UpdateRequest xmlns="http://exacttarget.com/wsdl/partnerAPI">
                            $2
                            $3
                        </UpdateRequest>
                    </soap-env:Body>
                </soap-env:Envelope>
            </format>
            <args>
                <arg expression="get-property('uri.var.accessToken')"/>
                <arg expression="get-property('uri.var.updateOptions')"/>
                <arg expression="get-property('uri.var.triggeredSendDefinitionObjects')"/>
            </args>
        </payloadFactory>
        <header name="To" expression="get-property('uri.var.apiUrl')"/>
        <header name="Action" value="Update"/>
        <call>
            <endpoint>
                <default format="soap11"/>
            </endpoint>
        </call>
        <!-- Remove custom header information in response -->
        <header name="X-AspNet-Version" scope="transport" action="remove"/>
        <header name="X-Powered-By" scope="transport" action="remove"/>
    </sequence>
</template>