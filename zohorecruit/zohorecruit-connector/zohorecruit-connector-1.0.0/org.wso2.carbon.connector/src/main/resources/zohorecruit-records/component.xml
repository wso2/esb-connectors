<component name="zohorecruit-records" type="synapse/template">
    <subComponents>
        <component name="addRecords">
            <file>addRecords.xml</file>
            <description>Create Job openings or Candidates.</description>
        </component>
        <component name="getRecordById">
            <file>getRecordById.xml</file>
            <description>Retieve a job opening or candidate using the Id.</description>
        </component>
        <component name="getRecords">
            <file>getRecords.xml</file>
            <description>Get a list of job openings or candidates in the system, filtered by
