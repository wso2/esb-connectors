<component name="twitter-directMessages" type="synapse/template">
	<subComponents>
		<component name="getDirectMessages">
			<file>getDirectMessages.xml</file>
			<description>Returns the 20 most recent direct messages sent to the authenticating user</description>
		</component>
		<component name="getDirectMessagesSent">
			<file>getDirectMessagesSent.xml</file>
			<description>Returns the 20 most recent direct messages sent by the authenticating user</description>
		</component>
		<component name="sendNewDirectMessages">
			<file>sendNewDirectMessages.xml</file>
			<description>Sends a new direct message to the specified user from the authenticating user. </description>
		</component>
	</subComponents>
</component>
