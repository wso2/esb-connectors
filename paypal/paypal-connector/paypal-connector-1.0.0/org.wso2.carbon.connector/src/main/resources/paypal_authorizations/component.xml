<component name="paypal_authorizations" type="synapse/template">
    <subComponents>
        <component name="lookupAuthorization">
            <file>lookupAuthorization.xml</file>
            <description>To get details about authorizations.</description>
        </component>
        <component name="captureAuthorization">
            <file>captureAuthorization.xml</file>
            <description>To capture and process a previously created authorization.</description>
        </component>
        <component name="reAuthorization">
            <file>reAuthorization.xml</file>
            <description>Reauthorize a PayPal account payment.</description>
        </component>
        <component name="voidAuthorization">
            <file>voidAuthorization.xml</file>
            <description>To Void a previously authorized payment.</description>
        </component>
        <component name="getAccessToken">
            <file>getAccessToken.xml</file>
            <description>To retrieve an access token.</description>
        </component>
    </subComponents>
</component>