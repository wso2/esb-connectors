<component name="paypal_payments" type="synapse/template">
    <subComponents>
        <component name="createPayment">
            <file>createPayment.xml</file>
            <description>Create a payment.</description>
        </component>
        <component name="executeApprovedPayment">
            <file>executeApprovedPayment.xml</file>
            <description>Execute a PayPal payment that has been approved by the payer.</description>
        </component>
        <component name="lookupPayment">
            <file>lookupPayment.xml</file>
            <description>Get details about payments that have not completed.</description>
        </component>
        <component name="listPayments">
            <file>listPayments.xml</file>
            <description>Get a list of payments.</description>
        </component>
    </subComponents>
</component>