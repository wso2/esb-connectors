<template name="getComments" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="commentId" description="The ID of the comment to get."/>
    <parameter name="fields"
               description="Specifying which fields to include in a partial response"/>
    <sequence>
        <property name="uri.var.commentId" expression="$func:commentId"/>
        <property name="uri.var.fields" expression="$func:fields"/>
        <script language="js"><![CDATA[
            var fields = mc.getProperty('uri.var.fields');
            var encodedFields = encodeURIComponent(fields);
            mc.setProperty('uri.var.encodedFields', encodedFields);
        ]]>
        </script>
        <!-- Building the URL with the parameters for the API method -->
        <filter xpath="(not(get-property('uri.var.encodedFields') = '' or (not(string(get-property('uri.var.encodedFields'))))))">
            <then>
                <property name="uri.var.apiParameters"
                          expression="fn:concat(get-property('uri.var.apiParameters'),'fields=',get-property('uri.var.encodedFields'))"/>
            </then>
        </filter>
        <call>
            <endpoint>
                <http method="GET"
                      uri-template="legacy-encoding:{uri.var.apiUrl}/comments/{uri.var.commentId}?{uri.var.apiParameters}"/>
            </endpoint>
        </call>
        <!-- Remove response custom header information -->
        <header name="Cache-Control" scope="transport" action="remove"/>
        <header name="Expires" scope="transport" action="remove"/>
        <header name="X-Content-Type-Options" scope="transport" action="remove"/>
    </sequence>
</template>
