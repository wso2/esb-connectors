<component name="ronin-contacts" type="synapse/template">
   <subComponents>
      <component name="listContacts">
         <file>listContacts.xml</file>
         <description>Retrive a list of all the Contacts in the Ronin account and under the specific Client.
         </description>
      </component>
      <component name="getContact">
         <file>getContact.xml</file>
         <description>Retrieve details of a Contact identified by the provided Contact ID.</description>
      </component>
      <component name="createContact">
         <file>createContact.xml</file>
         <description>Create a new Contact in Ronin account under specified Client using the provided Parameters.
         </description>
      </component>
   </subComponents>
</component>