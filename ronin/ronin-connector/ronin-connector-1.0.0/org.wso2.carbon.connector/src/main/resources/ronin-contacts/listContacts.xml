<!-- Method Documentation URL: http://www.roninapp.com/api/contacts -->
<template name="listContacts" xmlns="http://ws.apache.org/ns/synapse">
   <parameter name="page" description="To paginate through more results, you can use the page parameter." />
   <parameter name="pageSize" description="Number of results per page." />
   <parameter name="clientId" description="The client ID to retrieve contacts which belongs to specified client." />
   <sequence>
      <property name="uri.var.page" expression="$func:page" />
      <property name="uri.var.pageSize" expression="$func:pageSize" />
      <property name="uri.var.clientId" expression="$func:clientId" />
      <property name="uri.var.urlQuery" value="" />
      <filter source="boolean(get-property('uri.var.page'))" regex="true">
         <then>
            <property name="uri.var.urlQuery" expression="fn:concat('page=', get-property('uri.var.page'),'&amp;')" />
         </then>
      </filter>
      <filter source="boolean(get-property('uri.var.pageSize'))" regex="true">
         <then>
            <property name="uri.var.urlQuery" expression="fn:concat(get-property('uri.var.urlQuery'),'page_size=', get-property('uri.var.pageSize'),'&amp;')" />
         </then>
      </filter>
      <filter source="boolean(get-property('uri.var.urlQuery'))" regex="true">
         <then>
            <property name="uri.var.urlQuery"
               expression="fn:concat('?', fn:substring(get-property('uri.var.urlQuery'),1,fn:string-length(get-property('uri.var.urlQuery'))-1))" />
         </then>
      </filter>
      <!-- call "/clients/:client_id/contacts" if  :client_id provided, other wise "/contacts"-->
      <filter source="boolean(get-property('uri.var.clientId'))" regex="true">
         <then>
            <call>
               <endpoint>
                  <http method="get" uri-template="{uri.var.apiUrl}/clients/{uri.var.clientId}/contacts{uri.var.urlQuery}" />
               </endpoint>
            </call>
         </then>
         <else>
            <call>
               <endpoint>
                  <http method="get" uri-template="{uri.var.apiUrl}/contacts{uri.var.urlQuery}" />
               </endpoint>
            </call>
         </else>
      </filter>
      <!-- Remove custom Headers from the API Response -->
      <header name="X-Runtime" action="remove" scope="transport" />
      <header name="ETag" action="remove" scope="transport" />
      <header name="X-UA-Compatible" action="remove" scope="transport" />
      <header name="X-Request-Id" action="remove" scope="transport" />
      <header name="X-Rack-Cache" action="remove" scope="transport" />
      <header name="X-Powered-By" action="remove" scope="transport" />
   </sequence>
</template>