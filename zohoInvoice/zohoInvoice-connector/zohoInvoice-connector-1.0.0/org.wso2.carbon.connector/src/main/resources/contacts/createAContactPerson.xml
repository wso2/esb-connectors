<template name="createAContactPerson" xmlns="http://ws.apache.org/ns/synapse">
    <parameter name="authToken" description="API key"/>
    <parameter name="contactId" description="ID of contact to which contact person has to be created"/>
    <parameter name="email" description="Email address of the contact person"/>
    <parameter name="firstName" description="First name of the contact person"/>
    <parameter name="lastName" description="Last name of the contact person"/>
    <sequence>
        <property name="uri.var.authToken" expression="$func:authToken"/>
        <property name="uri.var.contactId" expression="$func:contactId"/>
        <property name="uri.var.email" expression="$func:email"/>
        <property name="uri.var.firstName" expression="$func:firstName"/>
        <property name="uri.var.lastName" expression="$func:lastName"/>
        <property name="zohoParameters" value=""/>
        <filter
                xpath="get-property('uri.var.firstName') = '' or  not(string(get-property('uri.var.firstName')))">
            <then>
                <property name="uri.var.firstName" value=""/>
            </then>
            <else>
                <property name="zohoParameters" expression="fn:concat(get-property('zohoParameters'),
               ',&quot;first_name&quot;:', get-property('uri.var.firstName'))"/>
            </else>
        </filter>
        <filter
                xpath="get-property('uri.var.lastName') = '' or  not(string(get-property('uri.var.lastName')))">
            <then>
                <property name="uri.var.lastName" value=""/>
            </then>
            <else>
                <property name="zohoParameters" expression="fn:concat(get-property('zohoParameters'),
               ',&quot;last_name&quot;:&quot;', get-property('uri.var.lastName'),'&quot;')"/>
            </else>
        </filter>
        <property name="uri.var.parameters" expression="get-property('zohoParameters')"/>
        <call>
            <endpoint>
                <http method="post"
                      uri-template="{uri.var.apiUrl}/contacts/contactpersons?authtoken={uri.var.authToken}&amp;JSONString={&quot;contact_id&quot;:&quot;{uri.var.contactId}&quot;,&quot;email&quot;:&quot;{uri.var.email}&quot;{uri.var.parameters}} "/>
            </endpoint>
        </call>
        <!-- Remove response custom header information -->
        <header name="x-li-format" scope="transport" action="remove"/>
        <header name="X-LI-UUID" scope="transport" action="remove"/>
        <header name="X-Li-Pop" scope="transport" action="remove"/>
        <header name="X-Li-Fabric" scope="transport" action="remove"/>
        <header name="x-li-request-id" scope="transport" action="remove"/>
    </sequence>
</template>