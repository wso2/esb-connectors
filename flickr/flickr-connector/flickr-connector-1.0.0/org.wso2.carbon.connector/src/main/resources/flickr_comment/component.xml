<component name="flickr_comment" type="synapse/template">
    <subComponents>
        <component name="getCommentList">
            <file>getCommentList.xml</file>
            <description>get the comment list for a photo.</description>
        </component>
        <component name="addComment">
            <file>addComment.xml</file>
            <description>add a comment to a photo.</description>
        </component>
        <component name="deleteComment">
            <file>deleteComment.xml</file>
            <description>delete a comment.</description>
        </component>
        <component name="editComment">
            <file>editComment.xml</file>
            <description>edit a comment.</description>
        </component>
        <component name="getRecentCommentsForContacts">
            <file>getRecentCommentsForContacts.xml</file>
            <description>
                Return the list of photos belonging to callers contacts that have been commented on recently.
            </description>
        </component>
    </subComponents>
</component>