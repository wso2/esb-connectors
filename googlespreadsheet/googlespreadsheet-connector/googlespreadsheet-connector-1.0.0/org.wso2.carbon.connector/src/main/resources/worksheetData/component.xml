<component name="worksheetData" type="synapse/template">
    <subComponents>
        <component name="listRows">
            <file>listRows.xml</file>
            <description>List feed contains all rows after the first row up to the first blank row
            </description>
        </component>
        <component name="getRow">
            <file>getRow.xml</file>
            <description>Get a single row</description>
        </component>
        <component name="insertRows">
            <file>insertRows.xml</file>
            <description>Insert row</description>
        </component>
        <component name="deleteRows">
            <file>deleteRows.xml</file>
            <description>Delete a single row</description>
        </component>
        <component name="listCells">
            <file>listCells.xml</file>
            <description>List cells</description>
        </component>
        <component name="getCell">
            <file>getCell.xml</file>
            <description>Get a single cell</description>
        </component>
        <component name="fetchSpecificRowsOrColumns">
            <file>fetchSpecificRowsOrColumns.xml</file>
            <description>Fetch specific rows or columns from a worksheet</description>
        </component>
        <component name="updateRow">
            <file>updateRow.xml</file>
            <description>Update the contents of an existing row</description>
        </component>
        <component name="updateCells">
            <file>updateCells.xml</file>
            <description>Change contents of a cell</description>
        </component>
        <component name="updateMultipleCells">
            <file>updateMultipleCells.xml</file>
            <description>Update multiple cells with a batch request</description>
        </component>
        <component name="sortRows">
            <file>sortRows.xml</file>
            <description>Get rows in reverse order or sort the values in ascending order or both
            </description>
        </component>
        <component name="queryForRows">
            <file>queryForRows.xml</file>
            <description>Get structured query to feed with entries that meet the specified
                criteria
            </description>
        </component>
        <component name="importData">
            <file>importData.xml</file>
            <description>Imports data at a given url in .csv</description>
        </component>
        <component name="importTableAndList">
            <file>importTableAndList.xml</file>
            <description>Imports data from a table or list within an HTML page</description>
        </component>
    </subComponents>
</component>