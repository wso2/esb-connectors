<template name="updatePagePicture" xmlns="http://ws.apache.org/ns/synapse">
	<parameter name="pageId" description="Unique identifier of the page." />
	<parameter name="apiUrl" description="Url of Facebook." />
	<sequence>
		<property name="uri.var.pageId" expression="$func:pageId" />
		<property name="uri.var.apiUrl" expression="$func:apiUrl" />
		<call>
			<endpoint>
				<http method="post" uri-template="{uri.var.apiUrl}/{uri.var.pageId}/picture" />
			</endpoint>
		</call>
		<!-- Remove response custom header information -->
		<header name="X-FB-Debug" scope="transport" action="remove" />
		<header name="X-FB-Rev" scope="transport" action="remove" />
		<header name="WWW-Authenticate" scope="transport" action="remove" />
	</sequence>
</template>