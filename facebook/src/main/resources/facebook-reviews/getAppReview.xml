<template name="getAppReview" xmlns="http://ws.apache.org/ns/synapse"> 
  <parameter name="appId" description="The appId"/>
  <sequence> 
    <property name="uri.var.appId" expression="$func:appId"/> 
    
    <call>
      <endpoint>
			<http method="get" uri-template="{uri.var.apiUrl}/{uri.var.appId}/reviews?access_token={uri.var.accessToken}&amp;fields={uri.var.fields}"/> 
      </endpoint>
    </call>
    
        		<!-- Remove response custom header information -->
		<header name="X-FB-Debug" scope="transport" action="remove" />
		<header name="X-FB-Rev" scope="transport" action="remove" />
		<header name="WWW-Authenticate" scope="transport" action="remove" />
  </sequence>
</template>

 